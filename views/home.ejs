            <div class="order-lg-last my-3 d-grid gap-2 col-6 mx-auto d-md-flex d-lg-grid">
                <button type="button" class="btn btn-outline-dark" onclick="family()">Family Gathering</button>
                <button type="button" class="btn btn-outline-dark" onclick="special()">Special Events</button>
                <button type="button" class="btn btn-outline-dark" onclick="social()">Social Events</button>
            </div>
